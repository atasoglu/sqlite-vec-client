{
  "categories": [
    {
      "title": "## ğŸš€ Features",
      "labels": ["feature", "enhancement"]
    },
    {
      "title": "## ğŸ› Fixes",
      "labels": ["fix", "bugfix", "bug"]
    },
    {
      "title": "## ğŸ”’ Security",
      "labels": ["security"]
    },
    {
      "title": "## ğŸ“ Documentation",
      "labels": ["documentation", "docs"]
    },
    {
      "title": "## ğŸ§° Maintenance",
      "labels": ["chore", "dependencies"]
    }
  ],
  "template": "${{CHANGELOG}}",
  "pr_template": "- ${{TITLE}} (#${{NUMBER}})",
  "empty_template": "- No changes",
  "label_extractor": [
    {
      "pattern": "^(feat|feature)(\\(.+\\))?:",
      "target": "feature"
    },
    {
      "pattern": "^(fix|bugfix)(\\(.+\\))?:",
      "target": "fix"
    },
    {
      "pattern": "^(docs|doc)(\\(.+\\))?:",
      "target": "documentation"
    },
    {
      "pattern": "^(chore|refactor)(\\(.+\\))?:",
      "target": "chore"
    }
  ]
}
